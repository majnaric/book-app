        <div class="container col-12">
            <h1 class="mt-5 mb-3 text-center">New Books</h1>
            <div class="row justify-content-between">

                <% for(bookData of newBooksFound){ %>
              <div class="col-xl-2 col-md-4 col-sm-6 col-xs-12">
                <div class="card text-center newBooksCard">
                    <img src="<%= bookData.cover %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <% if(bookData.title.length < 20) { %>  
                        <h5 class="card-title"><%= bookData.title %> </h5>
                        <% } else { %>
                          <h5 class="card-title" style="font-size: 16px;"><%= bookData.title %> </h5>
                          <% } %> 
                      <p class="card-text"><%= bookData.author %> </p>
                    </div>
                    <div class="card-body">
                      <a href="rand/<%=bookData._id%>" class="card-link"><button type="button" class="btn btn-primary btn-sm">More Details</button></a>
                    </div>
                  </div>
              </div>
              <% } %> 


            </div>           
            
          </div>
           
